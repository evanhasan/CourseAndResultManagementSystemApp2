<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IIT Course Management System Application</title>
    <link href="~/Content/images/IITFavicon.gif" rel="shortcut icon" type="image/x-gif" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>


    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />


    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown();
        });

    </script>
    <style>
        .menu li a {
            color: white !important;
            text-decoration: none !important;
        }

        .menu li li a {
            color: black !important;
            text-decoration: none;
        }

        .menu li a:hover {
            color: black !important;
            text-decoration: none;
            background-color: white;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top " style="background-color: teal;">
        <div class="container">
            <div class="navbar-header menu">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @{
                    var name = Session["TeacherName"].ToString();
                }
                <li>  @Html.ActionLink(name, "FacultyView", "ShareContents", new { area = "" }, new { @class = "navbar-brand" })</li>


            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav menu">
                    <li>@Html.ActionLink("Share Content", "Faculty", "ShareContents")</li>
                    @*<li>@Html.ActionLink("Share Wall", "TeacherWallViewContent", "TeacherShareContents")</li>
                        <li>@Html.ActionLink("Share Wall 2", "FacultyView", "ShareContents")</li>*@
                    <li>@Html.ActionLink("Course Assigned ", "CourseAssignTeacherView", "Routine")</li>
                    <li>@Html.ActionLink("Routine", "RoomAssigneViewForTeacher", "Routine")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Profile", "Profile", "Teachers")</li>
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Teachers")</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Teachers")</li>
                        </ul>
                    </li>


                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content" style="width: 100%">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Course Management System Application by Md. Abul Hasan</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>