@using MITCourseAndResultManagementSystemApp.Models.ViewModel
@model MITCourseAndResultManagementSystemApp.Models.ViewModel.CourseDepartment

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterPageLayout.cshtml";
   }

<h4>Assiged Subject List</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr accesskey="f">
        <th id=".">
            @Html.LabelFor(model => model.DepartmentName)
           
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semester)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Flag)
        </th>
        <th></th>
    </tr>

@foreach (CourseDepartment item in ViewBag.ListOfAssignCourse)
{
    <tr>
        <td>
            @item.DepartmentName
            - 
            @item.BatchNumber
        </td>
        <td>
            @item.Semester
        </td>
        <td>
            @item.CourseName
        </td>
       
        <td>
            @item.TeacherName
        </td>
        <td>
            @if (item.Flag == 0)
            {
                <label>Unassigned</label>

            }
            else
            {
                <label>Assigned</label>
            }
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
